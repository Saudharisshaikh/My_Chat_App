<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/messageImage"
        android:src="@drawable/profileimage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messagereceivertextview"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/receivermessagelayout"
        android:layout_toEndOf="@+id/messageImage"
        android:text="receiver message here"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
         android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:id="@+id/messagesenderimageview"

        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:id="@+id/messagereceiverimageview"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messagesendertextview"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sendermessagelayout"
        android:text="Sender messages"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:padding="10dp"
        />

</RelativeLayout>